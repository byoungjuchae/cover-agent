pipeline {
    agent any

    environment {
        GITHUB_REPOSITORY = "https://github.com/byoungjuchae/cover-agent.git"
        DOCKER_IMAGE_NAME = "cover_letter"
        DOCKER_TAG = "0.1v"
    }

    stages {
        stage("Clone") {
            steps {
                git "${GITHUB_REPOSITORY}:main"
            }
        }
        stage("Docker"){
            steps{
                script {
                    sh "docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_TAG} ."
                }
            }
        }
        
    }
}
